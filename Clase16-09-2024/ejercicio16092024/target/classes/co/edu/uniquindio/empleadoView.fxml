<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<GridPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.EmpresaController" hgap="10" vgap="10" padding="10">
    <!-- Tabla de Empleados -->
    <TableView fx:id="tableView" GridPane.rowIndex="0" GridPane.columnSpan="2">
        <columns>
            <TableColumn fx:id="colNombre" text="Nombre" />
            <TableColumn fx:id="colIdentificacion" text="Identificación" />
            <TableColumn fx:id="colSalario" text="Salario" />
            <TableColumn fx:id="colTelefono" text="Teléfono" />
            <TableColumn fx:id="colCorreo" text="Correo" />
        </columns>
    </TableView>

    <!-- Formulario de Empleado -->
    <GridPane fx:id="formGrid" GridPane.rowIndex="1" GridPane.columnSpan="2" padding="10" hgap="5" vgap="5">
        <Label text="Nombre:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
        <TextField fx:id="tfNombre" promptText="Nombre" GridPane.rowIndex="0" GridPane.columnIndex="1" />

        <Label text="Identificación:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
        <TextField fx:id="tfIdentificacion" promptText="Identificación" GridPane.rowIndex="1" GridPane.columnIndex="1" />

        <Label text="Salario:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
        <TextField fx:id="tfSalario" promptText="Salario" GridPane.rowIndex="2" GridPane.columnIndex="1" />

        <Label text="Teléfono:" GridPane.rowIndex="3" GridPane.columnIndex="0" />
        <TextField fx:id="tfTelefono" promptText="Teléfono" GridPane.rowIndex="3" GridPane.columnIndex="1" />

        <Label text="Correo:" GridPane.rowIndex="4" GridPane.columnIndex="0" />
        <TextField fx:id="tfCorreo" promptText="Correo" GridPane.rowIndex="4" GridPane.columnIndex="1" />

        <Button fx:id="btnAgregar" text="Agregar" GridPane.rowIndex="5" GridPane.columnIndex="0" />
        <Button fx:id="btnActualizar" text="Actualizar" GridPane.rowIndex="5" GridPane.columnIndex="1" />
        <Button fx:id="btnEliminar" text="Eliminar" GridPane.rowIndex="5" GridPane.columnIndex="2" />
    </GridPane>
</GridPane>
